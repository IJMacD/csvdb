    "version": "0.2.0",
    "configurations": [
        {
            "name": "gcc - Build and debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/debug/csvdb",
            "args": [
                // "--explain",
                // "--headers",
                // "SELECT * FROM test"
                // "FROM \\\"simple test\\\" ORDER BY name"
                // "FROM suits,ranks WHERE ranks.name = 'Ace'"
                // "FROM suits, ranks SELECT suits.name, ranks.name WHERE suits.name = 'clubs' AND ranks.name = 'Ace'"
